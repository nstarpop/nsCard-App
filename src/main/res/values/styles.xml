<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- MediaController buttons. -->

    <style name="MediaButton.Ffwd" parent="@android:MediaButton.Ffwd">
    </style>

    <style name="MediaButton.Rew" parent="@android:MediaButton.Rew">
    </style>

    <style name="progressBarStyleHorizontal" parent="@android:attr/progressBarStyleHorizontal">
        <!-- "@android:style/Widget.Holo.Light.ProgressBar.Horizontal" -->
        <!-- item name="android:thumb">@drawable/scrubber_control_selector_holo</item -->
    </style>
</resources>

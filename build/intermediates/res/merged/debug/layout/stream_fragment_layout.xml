<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:background="@color/nagra_header_background">

    <Button
        android:id="@+id/create_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/addcard"
        android:gravity="left|center_vertical"
        android:background="@color/nagra_header_background"
        android:text="@string/create_card"
        android:textColor="@color/nagra_main_title_text"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/personalListView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/nagra_header_background"
        android:layout_weight="1"
        android:listSelector="@drawable/selector_states"
        android:drawSelectorOnTop="false"
        android:dividerHeight="2dp"/>
</LinearLayout>